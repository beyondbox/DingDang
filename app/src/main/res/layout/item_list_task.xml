<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

    <com.zlkj.dingdangwuyou.widget.BorderCircleImageView
        android:id="@+id/imgViAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/red_packet"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imgViAvatar">

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/txtDate"
            android:layout_alignParentLeft="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="搬家收拾新家"
            android:textColor="@color/homeTabNormal"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/txtName"
            android:text="11-07"
            android:textColor="#C4C4C4"
            android:textSize="13sp"/>

        <ImageView
            android:id="@+id/imgviRedPacket"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@id/txtName"
            android:layout_marginTop="5dp"
            android:src="@mipmap/hongbao"/>

        <TextView
            android:id="@+id/txtPacketMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imgviRedPacket"
            android:layout_alignBottom="@id/imgviRedPacket"
            android:text="￥120"
            android:textSize="14sp"
            android:textColor="#E23511"/>

        <TextView
            android:id="@+id/txtJoinNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgviRedPacket"
            android:layout_marginTop="5dp"
            android:drawableLeft="@mipmap/geren"
            android:drawablePadding="5dp"
            android:text="0人参与"
            android:textSize="12sp"
            android:textColor="#BDBDBD"/>

        <TextView
            android:id="@+id/txtArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/txtJoinNum"
            android:text="石家庄"
            android:textSize="12sp"
            android:textColor="#C4C4C4"/>


    </RelativeLayout>



</RelativeLayout>