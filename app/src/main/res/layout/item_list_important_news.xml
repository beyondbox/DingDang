<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/txtNewsType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="社会-公益"
        android:textColor="#E02801"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/dividingLine"
        android:layout_marginTop="5dp"/>

    <com.zlkj.dingdangwuyou.widget.NoScrollGridView
        android:id="@+id/gridViImg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:listSelector="@android:color/transparent"
        android:horizontalSpacing="3dp"
        android:verticalSpacing="3dp"
        android:stretchMode="columnWidth"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@mipmap/news"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="3dp"
            android:text="中国公益联合援非活动 发轫深圳慈展会 发轫深圳慈展会"
            android:textSize="15sp"
            android:textColor="@color/homeTabNormal"/>

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/imageView"
            android:text="2016-10-31"
            android:textColor="#999999"
            android:textSize="12sp"/>

    </RelativeLayout>

    <View
        android:id="@+id/dashLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shp_dash_line_horizontal"
        android:layout_marginTop="8dp"/>

</LinearLayout>