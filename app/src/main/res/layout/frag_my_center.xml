<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/my_center_bg"
                    android:scaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <com.zlkj.dingdangwuyou.widget.BorderCircleImageView
                        android:id="@+id/imgViAvatar"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@mipmap/touxiang"
                        android:scaleType="centerCrop"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/txtNotLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgViAvatar"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/slt_not_login_bg"
                        android:paddingLeft="25dp"
                        android:paddingRight="25dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="未登录"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"/>

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgViAvatar"
                        android:layout_marginTop="15dp"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone"
                        android:textSize="17sp"
                        android:text="韩龙飞"
                        android:textColor="@color/grayLightBg"/>
                </RelativeLayout>
            </RelativeLayout>


            <!--菜单项-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--我的信息-->
                <LinearLayout
                    android:id="@+id/lLaytUserInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slt_common_bg"
                    android:padding="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/genrenxinxi"
                        android:drawablePadding="10dp"
                        android:text="我的信息"
                        android:textSize="15sp"
                        android:textColor="@color/homeTabNormal"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/arrow_right"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DBDBDB"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>


                <!--我的荣誉-->
                <LinearLayout
                    android:id="@+id/lLaytMyHonor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slt_common_bg"
                    android:padding="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/rongyu"
                        android:drawablePadding="10dp"
                        android:text="我的荣誉"
                        android:textSize="15sp"
                        android:textColor="@color/homeTabNormal"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/arrow_right"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DBDBDB"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <!--我的钱包-->
                <LinearLayout
                    android:id="@+id/lLaytMyWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slt_common_bg"
                    android:padding="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/yue"
                        android:drawablePadding="10dp"
                        android:text="我的钱包"
                        android:textSize="15sp"
                        android:textColor="@color/homeTabNormal"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/arrow_right"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DBDBDB"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <!--我发布的任务-->
                <LinearLayout
                    android:id="@+id/lLaytPublishedTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slt_common_bg"
                    android:padding="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/renwu"
                        android:drawablePadding="10dp"
                        android:text="我发布的任务"
                        android:textSize="15sp"
                        android:textColor="@color/homeTabNormal"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/arrow_right"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DBDBDB"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <!--我接受的任务-->
                <LinearLayout
                    android:id="@+id/lLaytReceivedTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slt_common_bg"
                    android:padding="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/renwu01"
                        android:drawablePadding="10dp"
                        android:text="我接受的任务"
                        android:textSize="15sp"
                        android:textColor="@color/homeTabNormal"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/arrow_right"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#DBDBDB"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <!--设置-->
                <LinearLayout
                    android:id="@+id/lLaytSetting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slt_common_bg"
                    android:padding="15dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:drawableLeft="@mipmap/shezhi"
                        android:drawablePadding="10dp"
                        android:text="设置"
                        android:textSize="15sp"
                        android:textColor="@color/homeTabNormal"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/arrow_right"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>