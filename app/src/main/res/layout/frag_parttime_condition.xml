<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:gravity="top"
            android:text="*"
            android:textColor="@color/titleBarRed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司全称 : "
            android:textSize="15sp"
            android:textColor="@color/homeTabNormal"/>

        <TextView
            android:id="@id/txtNameCom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/homeTabNormal"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/dividingLine"/>

    <!--*******************************************************************************-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:gravity="top"
            android:text="*"
            android:textColor="@color/titleBarRed"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优先条件 : "
            android:textSize="15sp"
            android:textColor="@color/homeTabNormal"/>

        <EditText
            android:id="@+id/txtPrefer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text=""
            android:textSize="14sp"
            android:textColor="@color/homeTabNormal"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/dividingLine"/>


    <!--*******************************************************************************-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系人 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <EditText
                android:id="@+id/txtContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/homeTabNormal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <EditText
                android:id="@+id/txtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/homeTabNormal"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/dividingLine"/>

    <!--*******************************************************************************-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <TextView
                android:id="@+id/txtSex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/arrow_down"
                android:gravity="center_vertical"
                android:text="不限"
                android:textSize="14sp"
                android:textColor="@color/homeTabNormal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="行业 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <EditText
                android:id="@+id/txtIndustry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/homeTabNormal"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/dividingLine"/>

    <!--*******************************************************************************-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="职位 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <EditText
                android:id="@+id/txtPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/homeTabNormal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="薪资 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <EditText
                android:id="@+id/txtSalary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/homeTabNormal"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/dividingLine"/>

    <!--*******************************************************************************-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="区域 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <EditText
                android:id="@+id/txtArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="石家庄"
                android:textSize="14sp"
                android:textColor="@color/homeTabNormal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作经验 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <EditText
                android:id="@+id/txtExperience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/homeTabNormal"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/dividingLine"/>

    <!--*******************************************************************************-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人数 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <EditText
                android:id="@+id/txtCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/homeTabNormal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工作环境 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <EditText
                android:id="@+id/txtEnvironment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/homeTabNormal"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/dividingLine"/>

    <!--*******************************************************************************-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现状 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <RadioGroup
                android:id="@+id/rdoGroupSituation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdoBtnStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/slt_release_positon_rdobtn"
                    android:drawablePadding="4dp"
                    android:text="学生"
                    android:textSize="14sp"
                    android:textColor="@color/homeTabNormal"/>

                <RadioButton
                    android:id="@+id/rdoBtnSocial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:button="@null"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/slt_release_positon_rdobtn"
                    android:drawablePadding="4dp"
                    android:text="社会人员"
                    android:textSize="14sp"
                    android:textColor="@color/homeTabNormal"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="@color/dividingLine"/>

    <!--*******************************************************************************-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:gravity="top"
                android:text="*"
                android:textColor="@color/titleBarRed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="薪资发放时间 : "
                android:textSize="15sp"
                android:textColor="@color/homeTabNormal"/>

            <EditText
                android:id="@+id/txtPayTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="center_vertical"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/homeTabNormal"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/txtRelease"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/slt_not_login_bg"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="发布招募匹配信息"
        android:textSize="15sp"
        android:textColor="@android:color/white"/>

</LinearLayout>